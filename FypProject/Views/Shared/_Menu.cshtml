@using FypProject.Extensions;
@using Microsoft.AspNet.Identity;


@{ 

    var roleName = HttpContext.Current.Session["RoleName"].ToString();
}

<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a href="@Url.Action("Index","Home")">
                <img alt="image" src="~/FrontEnd/Login/images/signin.svg" class="header-logo" /> <span class="logo-name"></span>
            </a>
        </div>
        <ul class="sidebar-menu">
            <li class="menu-header">Main</li>
            <li class="dropdown active">
                <a href="@Url.Action("Index","Home")" class="nav-link"><i data-feather="monitor"></i><span>Home</span></a>
            </li>

            @if (roleName == constant.Roles.User || roleName ==  constant.Roles.SuperAdmin)
            {
                <li>
                    <a class="nav-link" href="@Url.Action("PointOfSale", "Sales")">

                        <i data-feather="edit"></i><span>
                            Point Of Sale
                        </span>
                    </a>
                </li>

                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Sales")">

                        <i data-feather="check-square"></i><span>
                            View All Sales
                        </span>
                    </a>
                </li>

            }

            @if (roleName == constant.Roles.SuperAdmin)
            {

                <li>
                    <a class="nav-link" href="@Url.Action("Index", "User")">

                        <i data-feather="users"></i><span>
                            User Management
                        </span>
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Franchise")">

                        <i data-feather="codepen"></i><span>
                            Franchise
                        </span>
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Category")">

                        <i data-feather="menu"></i><span>
                            Category
                        </span>
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "SubCategory")">

                        <i data-feather="map"></i><span>
                            Sub-Category
                        </span>
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Product")">

                        <i data-feather="layers"></i><span>
                            Products
                        </span>
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Stock")">

                        <i data-feather="briefcase"></i><span>
                            Stock
                        </span>
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="@Url.Action("Index", "Transfer")">

                        <i data-feather="codepen"></i><span>
                            Transfer
                        </span>
                    </a>
                </li>



                <li>
                    <a class="nav-link" href="@Url.Action("salesReport", "Report")">

                        <i data-feather="menu"></i><span> 
                            Sale Report
                        </span>
                    </a>
                </li>



                <li>
                    <a class="nav-link" href="@Url.Action("InventoryReport", "Report")">

                        <i data-feather="menu"></i><span>
                            Stock Report
                        </span>
                    </a>
                </li>

            }

        </ul>
    </aside>
</div>


