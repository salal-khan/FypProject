@model IEnumerable<FypProject.Models.SalesDetailIndexVM>

 
<div class="modal fade" id="salesdetailModal" role="dialog" aria-labelledby="salesdetailformModal" data-backdrop="static" data-keyboard="false"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="salesdetailformModal">Sales Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="table-salesdetail">
                            <thead>
                                <tr>

                                    <th>Category</th>
                                    <th>Sub Category</th>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Selling Price</th>
                                    <th>Sub-Total</th>


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>@item.CategoryName</td>
                                        <td>@item.SubCategoryName</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.SellingPrice</td>
                                        <td>@item.SellingSubTotal</td>
  
                                    </tr>


                                }

                            </tbody>

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(function () {

        var tableUsers = $('#table-salesdetail');
        applyDatatableClass(tableUsers);

        setTimeout(function () { toggleUniversalLoader(); }, 500);

        $('#salesdetailModal').modal('toggle');


    });





</script>
