@model IEnumerable<FypProject.Models.StockDetailIndexVM>



<div class="modal fade" id="stockdetailModal" role="dialog" aria-labelledby="stockdetailformModal" data-backdrop="static" data-keyboard="false"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="stockdetailformModal">Stock Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="table-stockdetail">
                            <thead>
                                <tr>

                                    <th>Category</th>
                                    <th>Sub Category</th>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Actual Price</th>
                                    <th>Sub-Total</th>
                                  

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>@item.CategoryName</td>
                                        <td>@item.SubCategoryName</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductQuantity</td>
                                        <td>@item.ProductActualPrice</td>
                                        <td>@item.ProductSubTotalAmount</td>


                                      

                                    </tr>


                                }

                            </tbody>

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(function () {

        var tableUsers = $('#table-stockdetail');
        applyDatatableClass(tableUsers);

        setTimeout(function () { toggleUniversalLoader(); }, 500);

        $('#stockdetailModal').modal('toggle');
 

    });

 



</script>
